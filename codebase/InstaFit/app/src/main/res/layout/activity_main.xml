<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/_item_view">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ddItem"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtReps"
        android:layout_alignBottom="@+id/txtReps"
        android:layout_below="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtReps"
        android:hint="Enter Reps/Min"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or calorie goal"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="13dp"
        android:textColor="#7f8330"
        android:layout_below="@+id/txtReps"
        android:paddingTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtCalories"
        android:hint="Enter Calories"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/ddItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="calories"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/txtCalories"
        android:layout_alignStart="@+id/ddItem"
        android:layout_alignBottom="@+id/txtCalories"
        android:textStyle="bold|italic" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tblExercises"
        android:layout_below="@+id/txtCalories"
        android:layout_alignParentStart="true"
        android:numColumns="2"
        android:paddingTop="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter exercise reps/duration"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="13dp"
        android:textColor="#7f8330" />

</RelativeLayout>
