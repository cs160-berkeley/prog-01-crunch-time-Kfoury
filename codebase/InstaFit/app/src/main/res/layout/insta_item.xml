<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/item_view">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgIcon"
        android:src="@drawable/run_1"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:background="#00fff883"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="200 Cal"
        android:id="@+id/lblCal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:singleLine="false"
        android:textSize="13sp"
        android:background="#a0272824"
        android:textColor="#f3f4ff"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="30dp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/lblReps"
        android:layout_alignRight="@+id/imgIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100 Reps"
        android:id="@+id/lblReps"
        android:textAlignment="center"
        android:textStyle="bold"
        android:singleLine="false"
        android:textSize="13dp"
        android:background="#a0272824"
        android:textColor="#f3f4ff"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="30dp"
        android:layout_alignBottom="@+id/imgIcon"
        android:layout_alignEnd="@+id/imgIcon"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Push Ups"
        android:id="@+id/lblActivityType"
        android:textSize="15dp"
        android:textAlignment="center"
        android:background="#f6ff44"
        android:textStyle="italic"
        android:textColor="#010101"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="30dp"
        android:layout_below="@+id/imgIcon"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imgIcon" />

</RelativeLayout>